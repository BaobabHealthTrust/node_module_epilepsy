    form(id='form' action='/epilepsy/encounter/create/#{id}' method='post')

        input(type='hidden' name='data[UUID]' value='#{uuid}')

        input(type='hidden' name='data[programs][EPILEPSY PROGRAM][patient_programs][#{program_uuid}][visits][#{today}][UPDATE OUTCOME][UUID]' value='#{encounter_uuid}')

        select(id='1.1.1' helpText='New Outcome' tt_onLoad='showCategory("Update Outcome");' tt_pageStyleClass='longSelectList noKeyboard'
                name='data[programs][EPILEPSY PROGRAM][patient_programs][#{program_uuid}][visits][#{today}][UPDATE OUTCOME][data][][OUTCOME][response][value]')
            option
            option
                | Patient Transferred Out
            option
                | Patient Died
            option
                | Discharged
            option
                | On treatment
            option
                | Defaulted
            option
                | Treatment Stopped
        input(type='hidden'  name='data[programs][EPILEPSY PROGRAM][patient_programs][#{program_uuid}][visits][#{today}][UPDATE OUTCOME][data][][OUTCOME][UUID]'  value='' )
