        input(type='hidden'  name='data[programs][EPILEPSY PROGRAM][patient_programs][#{program_uuid}][visits][#{today}][UPDATE OUTCOME][data][][OUTCOME][concept][name]'  value='OUTCOME' )
        input(type='hidden'  name='data[programs][EPILEPSY PROGRAM][patient_programs][#{program_uuid}][visits][#{today}][UPDATE OUTCOME][data][][OUTCOME][response][category]'  value='TEXT' )

        input(type='text' id='location' helpText='Select Location transferred to:' condition='$("1.1.1").value.toLowerCase() == "patient transferred out"' ajaxURL='/location/locations?search_string=' name='data[programs][EPILEPSY PROGRAM][patient_programs][#{program_uuid}][visits][#{today}][UPDATE OUTCOME][data][][TRANSFERRED TO][response][value]')
        input(type='hidden'  name='data[programs][EPILEPSY PROGRAM][patient_programs][#{program_uuid}][visits][#{today}][UPDATE OUTCOME][data][][TRANSFERRED TO][UUID]'  value='' )
        input(type='hidden'  name='data[programs][EPILEPSY PROGRAM][patient_programs][#{program_uuid}][visits][#{today}][UPDATE OUTCOME][data][][TRANSFERRED TO][concept][UUID]'  value='' )
        input(type='hidden'  name='data[programs][EPILEPSY PROGRAM][patient_programs][#{program_uuid}][visits][#{today}][UPDATE OUTCOME][data][][TRANSFERRED TO][concept][name]'  value='TRANSFERRED TO' )
        input(type='hidden'  name='data[programs][EPILEPSY PROGRAM][patient_programs][#{program_uuid}][visits][#{today}][UPDATE OUTCOME][data][][TRANSFERRED TO][response][category]'  value='TEXT' )
